{
	"name": "rebuzzle",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"dev:web": "turbo run dev --filter=web",
		"dev:desktop": "turbo run dev --filter=desktop",
		"dev:mobile": "turbo run dev --filter=mobile"
	},
	"devDependencies": {
		"prettier": "^3.2.5",
		"turbo": "^2.0.6",
		"typescript": "^5.4.5"
	},
	"engines": {
		"node": ">=18"
	},
	"packageManager": "npm@10.8.1",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}