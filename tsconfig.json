{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"shared-utils": ["packages/shared-utils"]
		},
		"rootDir": ".",
		"module": "commonjs",
		"target": "es5",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["apps/**/*", "packages/**/*"]
}
